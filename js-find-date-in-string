let specifDate = new Date('2021-01-01');

console.log(new Intl.DateTimeFormat('pt', { month: 'long' }).format(specifDate));
console.log(new Intl.DateTimeFormat('en', { weekday: 'long' }).format(specifDate));
console.log(new Intl.DateTimeFormat('es', { weekday: 'short' }).format(specifDate));
console.log(new Intl.DateTimeFormat('pt', { year: 'numeric' }).format(specifDate));
console.log(new Intl.DateTimeFormat('pt', { day: 'numeric' }).format(specifDate));


//const options1 = { weekday: 'short', year: 'numeric', month: 'long', day: 'numeric' };
//https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Intl/DateTimeFormat/format
